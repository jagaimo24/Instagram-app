<li id="micropost-<%= micropost.id %>" data-micropost-id="<%= micropost.id %>">
  <% unless controller_name == "users" %>
    <div class="micropost-header">
      <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
      <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    </div>
  <% end %>
  <span class="content home-content">
    <%= image_tag micropost.picture.url if micropost.picture? %>
    <%= micropost.content %>
  </span>
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at) %>前
    <% if current_user?(micropost.user) %>
      <%= link_to "削除", micropost, method: :delete,
                                       data: { confirm: "本当に削除しますか？" } %>
    <% end %>
  </span>
  <section class="like">
    <%= render "likes/likes", micropost: micropost %>
  </section>
  <%= link_to  "コメントする", micropost %>
</li>