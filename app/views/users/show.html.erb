<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p>ユーザー名：<%= @user.user_name %></p>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section class="profile">
      <%= @user.profile %>
    </section>
    <% if current_user.admin? || current_user.id == @user.id %>
      <%= link_to 'プロフィール変更', edit_user_registration_path %>
    <% end %>
  </aside>
  <div class="col-md-8 post-col">
    <%= render 'follow_form' if user_signed_in? %>
    <% if @user.microposts.any? %>
      <h3><%= @user.microposts.count %><small class="text-muted"> 投稿</small></h3>
      <ol class="microposts my-micropost">
        <%= render @microposts %>
      </ol>
      <%= paginate @microposts %>
    <% end %>
  </div>
</div>