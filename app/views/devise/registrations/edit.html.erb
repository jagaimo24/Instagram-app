<h1>プロフィールを編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :user_name %>
        <%= f.text_field :user_name, autocomplete: "user_name", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :phone %>
        <%= f.text_field :phone, autocomplete: "phone", class: 'form-control', placeholder: "ハイフンを含めて入力してください"%>
      </div>

      <div class="field">
        <%= f.label :gender %>
          <%= f.label :gender, "男性" %>
          <%= f.radio_button :gender, :man %>
          <%= f.label :gender, "女性" %>
          <%= f.radio_button :gender, :woman %>
      </div>

      <div class="field">
        <%= f.label :profile %>
        <%= f.text_area :profile, class: 'form-control', placeholder: "160文字以内で入力" %> 
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", 
                  class: 'form-control', placeholder: "変更しない場合は空欄のままにしてください" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> 文字以上</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i class="text-danger">（変更するには現在のパスワードが必要です）</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <div class="btn actions">
        <%= f.submit "更新", class: "btn btn-primary" %>
      </div>
    <% end %>

    <% unless current_user == resource && current_user.admin? %>
    <h3>アカウント削除</h3>
      <p>削除しますか？ <%= button_to "削除", registration_path(resource_name), 
                                data: { confirm: "本当に削除しますか？" }, method: :delete, class: "btn btn-danger" %></p>
    <% end %>
    <%= link_to "戻る", root_path, class: 'btn btn-default' %>
    
     <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">プロフィール画像を変更する</a>
    </div>
  </div>
</div>

